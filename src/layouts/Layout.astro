---
/* Importar componentes */
import Analytics from "@vercel/analytics/astro";
import { ClientRouter } from "astro:transitions";

import NavHeader from "@sections/NavHeader.astro";
import BotonTema from "@components/BotonTema.astro";
import Footer from "@sections/Footer.astro";
import BotonArriba from "@components/BotonArriba.astro";

import "@styles/global.css";

import "@fontsource/poppins/100.css";
import "@fontsource/poppins/200.css";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "@fontsource/poppins/800.css";
import "@fontsource/poppins/900.css";
import "@fontsource/poppins/100-italic.css";
import "@fontsource/poppins/200-italic.css";
import "@fontsource/poppins/300-italic.css";
import "@fontsource/poppins/400-italic.css";
import "@fontsource/poppins/500-italic.css";
import "@fontsource/poppins/600-italic.css";
import "@fontsource/poppins/700-italic.css";
import "@fontsource/poppins/800-italic.css";
import "@fontsource/poppins/900-italic.css";

interface Props {
	title?: string;
	theme?: string;
	pagina?: string;
}

const { title, theme, pagina } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<!-- ---- MetaDatos ---- -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<!-- Título optimizado -->
		<title>CursaPlan {title && `| ${title}`}</title>

		<!-- Meta descripción -->
		<meta
			name="description"
			content="Encuentra los planes de estudio detallados de todas las carreras de FaCENA. Información actualizada sobre materias, correlatividades y más."
		/>

		<!-- Palabras clave -->
		<meta
			name="keywords"
			content="CursaPlan, planes de estudio FaCENA, carreras FaCENA, materias, correlatividades, universidad, Facultad de Ciencias Exactas y Naturales"
		/>

		<!-- Autor -->
		<meta name="author" content="CursaPlan Team" />

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- Etiquetas Open Graph (Para Facebook, LinkedIn, etc.) -->
		<meta
			property="og:title"
			content="CursaPlan - Planes de Estudio de FaCENA"
		/>
		<meta
			property="og:description"
			content="Consulta los planes de estudio de todas las carreras de FaCENA con información actualizada sobre materias y correlatividades."
		/>
		<meta property="og:image" content="/157shots_so.png" />
		<meta property="og:url" content="https://tudominio.com" />
		<meta property="og:type" content="website" />

		<!-- Twitter Card (Para Twitter) -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:title"
			content="CursaPlan - Planes de Estudio de FaCENA"
		/>
		<meta
			name="twitter:description"
			content="Consulta los planes de estudio de todas las carreras de FaCENA con información actualizada sobre materias y correlatividades."
		/>
		<meta name="twitter:image" content="/157shots_so.png" />
		<meta
			property="og:site_name"
			content="https://cursa-plan.vercel.app/"
		/>
		<!-- Datos estructurados JSON-LD para SEO (Google) -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "EducationalOrganization",
				"name": "CursaPlan",
				"url": "https://tudominio.com",
				"logo": "https://tudominio.com/logo.png",
				"description": "Consulta los planes de estudio de todas las carreras de FaCENA con información detallada sobre materias y correlatividades.",
				"sameAs": [
					"https://facebook.com/cursaplan",
					"https://twitter.com/cursaplan",
					"https://instagram.com/cursaplan"
				]
			}
		</script>

		<meta name="generator" content={Astro.generator} />

		<!-- ---- MaterialDesign ---- -->
		<script type="importmap">
			{
				"imports": {
					"@material/web/": "https://esm.run/@material/web/"
				}
			}
		</script>
		<script type="module">
			import "@material/web/all.js";
			import { styles as typescaleStyles } from "@material/web/typography/md-typescale-styles.js";

			document.adoptedStyleSheets.push(typescaleStyles.styleSheet);
		</script>

		<!-- flowbite -->
		<script
			is:inline
			src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"
		></script>
		<script>
			// On page load or when changing themes, best to add inline in `head` to avoid FOUC
			if (
				localStorage.getItem("color-theme") === "dark" ||
				(!("color-theme" in localStorage) &&
					window.matchMedia("(prefers-color-scheme: dark)").matches)
			) {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
			}
		</script>

		<!-- View Transition -->
		<!-- <ClientRouter /> -->
		<Analytics />
	</head>
	<body
		class=`theme-${theme} transition-color ease-in-out duration-200 flex justify-center bg-background`>
		<main
			class=`flex flex-col gap-6 p-4 sm:py-4 sm:px-12 md:py-6 md:px-16 lg:py-4 lg:px-20 w-full`>
			<NavHeader pagina={pagina} />
			<slot />
			<BotonTema />
			<BotonArriba />
			<Footer />
		</main>
	</body>
</html>

<style is:global>
	@import "tailwindcss";

	html, body {
		scroll-behavior: smooth;
		margin: 0;
		width: 100%;
		height: 100%;
		min-height: 100vh;
		overscroll-behavior-y: none;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
