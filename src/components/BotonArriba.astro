---
import {Icon} from "astro-icon/components"
---

<md-fab id="scrollToTop" class="text-[var(--md-sys-color-on-primary)] invisible transition-all ease-in-out duration-150 fixed bottom-2 right-2 z-50 opacity-0 scale-90" variant="primary">
	<Icon slot="icon" name="arrow-up" />
</md-fab>

<script>
		const scrollToTopButton = document.getElementById("scrollToTop")

		const toggleVisibility = () => {
			if (window.scrollY > 200) {
				// Mostrar despuÃ©s de scrollear 200px
				scrollToTopButton?.classList.remove("invisible", "opacity-0", "scale-90")
				scrollToTopButton?.classList.add("opacity-100", "scale-100")
			} else {
				scrollToTopButton?.classList.remove("opacity-100", "scale-100")
				scrollToTopButton?.classList.add("invisible", "opacity-0", "scale-90")
			}
		}

		const handleScrollToTop = () => {
			window.scrollTo({
				top: 0,
				behavior: "smooth",
			})
		}

		window.addEventListener("scroll", toggleVisibility)
		scrollToTopButton?.addEventListener("click", handleScrollToTop)

</script>
