{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@ui/*": ["src/components/ui/*"],
			"@sections/*": ["src/sections/*"],
			"@layouts/*": ["src/layouts/*"],
			"@icons/*": ["src/icons/*"],
			"@data/*": ["src/data/*"],
			"@lib/*": ["src/lib/*"],
			"@types": ["src/types.ts"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	}
}
